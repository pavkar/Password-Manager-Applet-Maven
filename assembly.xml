<assembly xmlns="http://maven.apache.org/ASSEMBLY/2.1.0" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
          xsi:schemaLocation="http://maven.apache.org/ASSEMBLY/2.1.0 http://maven.apache.org/xsd/assembly-2.1.0.xsd">
    <id>install</id>
    <formats>
        <format>jar</format>
    </formats>
    <includeBaseDirectory>false</includeBaseDirectory>
    <dependencySets>
        <dependencySet>
            <outputDirectory>./</outputDirectory>
            <useProjectArtifact>true</useProjectArtifact>
            <unpack>true</unpack>
            <scope>import</scope>
        </dependencySet>
    </dependencySets>
    <fileSets>
        <fileSet>
            <directory>${project.build.directory}/main</directory>
            <outputDirectory>./</outputDirectory>
            <includes>
                <include>**/*.class</include>
            </includes>
            <useDefaultExcludes>true</useDefaultExcludes>
        </fileSet>
    </fileSets>
    <files>
        <file>
            <source>/ext/armis/applet-development-scripts/secrets/ssd.key.hex</source>
            <outputDirectory>./resources/secrets/</outputDirectory>
        </file>
        <file>
            <source>/ext/armis/applet-development-scripts/secrets/dm.key.pem</source>
            <outputDirectory>./resources/secrets/</outputDirectory>
        </file>
        <file>
            <source>/ext/armis-ecosystem-manager.cap</source>
            <outputDirectory>./resources/</outputDirectory>
        </file>

        <file>
            <source>/ext/armis-ecosystem-lib.cap</source>
            <outputDirectory>./resources/</outputDirectory>
        </file>
        <file>
            <source>${project.build.directory}/PasswordManagerApplet.cap</source>
            <outputDirectory>./resources/</outputDirectory>
        </file>
    </files>
</assembly>
