<?xml version="1.0" encoding="UTF-8"?>
<project xmlns="http://maven.apache.org/POM/4.0.0"
         xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/xsd/maven-4.0.0.xsd">
    <modelVersion>4.0.0</modelVersion>

    <groupId>ee.eid</groupId>
    <artifactId>password_storage_applet</artifactId>
    <version>0.1</version>

    <properties>
        <maven.compiler.source>14</maven.compiler.source>
        <maven.compiler.target>14</maven.compiler.target>
        <armis.applet.ecosystem.version>1.0-SNAPSHOT</armis.applet.ecosystem.version>
        <java14CompilerExecutable>${JAVA_HOME}/bin/javac</java14CompilerExecutable>
        <compileJavaExecutable>${java14CompilerExecutable}</compileJavaExecutable>
    </properties>

    <repositories>
        <repository>
            <id>ext-local</id>
            <url>file://${project.basedir}/ext/maven-repository</url>
        </repository>
        <repository>
            <id>javacard-pro</id>
            <url>https://javacard.pro/maven/</url>
        </repository>
    </repositories>

    <dependencies>
        <dependency>
            <groupId>oracle.javacard</groupId>
            <artifactId>api_classic</artifactId>
            <version>3.0.4</version>
        </dependency>

        <dependency>
            <groupId>com.klinec</groupId>
            <artifactId>jcardsim</artifactId>
            <version>3.0.5.11</version>
<!--            Defined separately-->
            <exclusions>
                <exclusion>
                    <groupId>oracle.javacard</groupId>
                    <artifactId>*</artifactId>
                </exclusion>
                <exclusion>
                    <groupId>junit</groupId>
                    <artifactId>*</artifactId>
                </exclusion>
            </exclusions>
            <scope>provided</scope>
        </dependency>

        <dependency>
            <groupId>ee.openeid.armis.applet.ecosystem</groupId>
            <artifactId>classpath-overrides</artifactId>
            <version>${armis.applet.ecosystem.version}</version>
        </dependency>
        <dependency>
            <groupId>ee.openeid.armis.applet.ecosystem</groupId>
            <artifactId>util-lib</artifactId>
            <version>${armis.applet.ecosystem.version}</version>
<!--            Defined separately-->
            <exclusions>
                <exclusion>
                    <groupId>oracle.javacard</groupId>
                    <artifactId>api_classic</artifactId>
                </exclusion>
            </exclusions>
        </dependency>
        <dependency>
            <groupId>org.globalplatform</groupId>
            <artifactId>gpapi</artifactId>
            <version>1.6</version>
        </dependency>
    </dependencies>

    <build>
        <pluginManagement>
            <plugins>
                <plugin>
                    <groupId>org.apache.maven.plugins</groupId>
                    <artifactId>maven-compiler-plugin</artifactId>
                    <version>3.8.1</version>
                    <configuration>
                        <fork>true</fork>
                        <compilerArgs>
                            <arg>--add-modules</arg>
                            <arg>java.smartcardio</arg>
                        </compilerArgs>
                    </configuration>
                    <executions>
                        <execution>
                            <id>default-compile</id>
                            <configuration>
                                <executable>${compileJavaExecutable}</executable>
                                <source>${maven.compiler.source}</source>
                                <target>${maven.compiler.target}</target>
                            </configuration>
                        </execution>
                    </executions>
                </plugin>
<!--            Runs  command-->
                <plugin>
                    <groupId>org.apache.maven.plugins</groupId>
                    <artifactId>maven-antrun-plugin</artifactId>
                    <version>3.0.0</version>
                </plugin>
<!--            The Install Plugin is used during the install phase to add artifact(s) to the local repository.-->
                <plugin>
                    <groupId>org.apache.maven.plugins</groupId>
                    <artifactId>maven-install-plugin</artifactId>
                    <version>3.0.0-M1</version>
                </plugin>
            </plugins>
        </pluginManagement>

        <plugins>
            <plugin>
                <groupId>org.apache.maven.plugins</groupId>
                <artifactId>maven-antrun-plugin</artifactId>
                <executions>
                    <execution>
                        <id>create-cap</id>
                        <phase>package</phase>
                        <configuration>
                            <target>
                                <ant antfile="${project.basedir}/build.xml">
                                    <target name="create-cap"/>
                                </ant>
                            </target>
                        </configuration>
                        <goals>
                            <goal>run</goal>
                        </goals>
                    </execution>
                </executions>
            </plugin>
<!--            The Assembly Plugin for Maven enables developers to combine project output into a single distributable
archive that also contains dependencies, modules, site documentation, and other files.-->
            <plugin>
                <artifactId>maven-assembly-plugin</artifactId>
                <version>3.1.1</version>
                <configuration>
                    <descriptors>
                        <descriptor>assembly.xml</descriptor>
                    </descriptors>
                </configuration>
                <executions>
                    <execution>
                        <id>make-assembly</id>
                        <phase>package</phase>
                        <goals>
                            <goal>single</goal>
                        </goals>
                        <configuration>
                            <archive>
                                <manifest>
                                    <mainClass>ee.eid.installer.CapFileInstaller</mainClass>
                                </manifest>
                            </archive>
                        </configuration>
                    </execution>
                </executions>
            </plugin>
        </plugins>
    </build>

</project>